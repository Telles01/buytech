<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
    <% if product.id.present?%>
      <h3> Update your product</h3>
    <% else %>
      <h3>Create a new product</h3>
    <% end %>
    <div class="card-body bg-white p-3">

      <%= simple_form_for(product) do |f| %>
       <%= f.input :name, label: "Product Name" %>
        <%= f.input :description, label: "Description" %>
        <%= f.input :units, label: "Units" %>
        <%= f.input :price, label: "Price" %>
        <%= f.input :photo, as: :file, label: "Photo" %>
        <%= f.submit product.id.present? ? "Update" : "Create", class: "btn btn-primary mt-3" %>
      <% end %>
      </div>
    </div>
  </div>
</div>
